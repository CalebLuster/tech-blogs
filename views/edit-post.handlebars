<a href="/dashboard" class="back"> &larr; Back to dashboard</a>

<article class="new-page">
    <section class="edit-page">
        <div class="form-header">
            <h3>Edit your post!</h3>
        </div>
        <div class="form-section">
            <form class="blog-form">
                <div class="title-section">
                    <label for="blog-title">Title</label>
                    <input type="text" name="blog-title" id="blog-title" value="{{blog.title}}"/>
                </div>
                <div class="blog-content">
                    <label for="blog-content">Blog Content</label>
                    <textarea name="blog-content" id="blog-content" class="textarea">{{blog.content}}</textarea>
                </div>
                <button type="submit"> Update Blog</button>
                <button type="button" class="delete-button">Delete Blog</button>
            </form>
        </div>
    </section>
</article>

{{#if loggedIn}}
<script src="/public/javascript/edit-post.js"></script>
<script src="/public/javascript/delete-post.js"></script>
{{/if}}