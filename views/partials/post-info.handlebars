<article class="post">
    <div class="whole-post">
        <div class="info-section">
            <div class="post-name">
                <a href="/post/{{id}}" class="links">{{title}}</a>
            </div>
            <div class="created-by">
                <p id="comment-sub-header">
                    Post Created by <b>{{user.username}}</b> and posted on <b>{{formDate created_at}}</b>
                </p>
            </div>
        </div>
        <div class="content-section">
            <p>{{content}}</p>
        </div>
    </div>
</article>